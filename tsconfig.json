{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist/esm",
    "noImplicitAny": true,
    "declaration": true,
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016.Array.Include",
      "ES2021"
    ],
    "declarationDir": "dist/esm",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "emitDeclarationOnly": false,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
